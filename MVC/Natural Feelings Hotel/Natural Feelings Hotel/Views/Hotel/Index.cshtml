@{
	ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Http
@using Natural_Feelings_Hotel.API
@{
	Hotel homeAPI = new Hotel();
	HotelModel homeModel = homeAPI.ReadHome().GetAwaiter().GetResult();
}
<div class="inner">
	<div>
		<header id="header">
			<a asp-action="" asp-controller="" class="logo"> <img src="~/img/Logo Natural Feelings.png" width="100" height="100"> <strong>Hotel</strong> - Natural Feelings</a>
		</header>
	</div>

	<div class="text-center">
        <h2 class="display-4">Inicio</h2>
    </div>

	<div class="my-4">
		<div class="row m-0 p-0 row-cols-lg-2 row-cols-sm-1">
			<div class="col-lg-6 col-sm-12 p-0">
				<img class="m-auto" src="~/galery/@homeModel.Image.IdImage@homeModel.Image.ImageFormat" style="width: 100%">
			</div>
			<div class="col-lg-6 col-sm-12 p-0 my-auto">
				<p class="text-justify mx-lg-4 my-auto">@homeModel.Description</p>
			</div>
		</div>
	</div>
</div>

