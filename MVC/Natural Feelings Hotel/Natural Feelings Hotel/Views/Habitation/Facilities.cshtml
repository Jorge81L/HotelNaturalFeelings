@{
    ViewData["Title"] = "Facilities Page";
}
@using Microsoft.AspNetCore.Http
@using Natural_Feelings_Hotel.API
@{
    Hotel facilitiesAPI = new Hotel();
    List<FacilitiesModel> facilitiesList = facilitiesAPI.ReadFacilities().GetAwaiter().GetResult();
}
<div class="inner">
    <div>
        <header id="header">
            <a asp-action="" asp-controller="" class="logo"> <img src="~/img/Logo Natural Feelings.png" width="100" height="100"> <strong>Hotel</strong> - Natural Feelings</a>
        </header>
    </div>

    <div class="text-center">
        <h2 class="display-4">Facilidades</h2>
    </div>

    <div class="my-4">
        @foreach (var item in facilitiesList)
        {
            <div class="row m-0 p-0 row-cols-lg-2 row-cols-sm-1">
                <div class="col-lg-6 col-sm-12 p-0 my-2">
                    @{
                        var base64 = Convert.ToBase64String(item.Image.ImageContent);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }
                    <img src="@imgSrc" style="width: 100%;" />
                </div>
                <div class="col-lg-6 col-sm-12 p-0 my-auto">
                    <p class="text-justify mx-lg-4 my-auto">@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
            </div>
        }
    </div>
</div>
