<html>
@using Microsoft.AspNetCore.Http
@using Natural_Feelings_Admi.API
<head>
    <title>Natural Feelings</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script type="text/javascript" src="~/js/Funciones.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script type="text/javascript">
        function changeImage1(){
            $('#probando').html('<img src="/galery/paseo.jpg" style="width:100%">');
        }
        function changeImage2(){
            $('#probando').html('<img src="/galery/paseo2.jpg" style="width:100%">');
        }
        function changeImage3(){
            $('#probando').html('<img src="/galery/rio.jpg" style="width:100%">');
        }
        function changeImage4(){
            $('#probando').html('<img src="/galery/bungee.jpg" style="width:100%">');
        }
        function changeImage5(){
            $('#probando').html('<img src="/galery/bungee2.jpg" style="width:100%">');
        }
        function changeImage6(){
            $('#probando').html('<img src="/galery/rafting.jpg" style="width:100%">');
        }
        function changeImage7(){
            $('#probando').html('<img src="/galery/termal.jpg" style="width:100%">');
        }
        function changeImage8(){
            $('#probando').html('<img src="/galery/termal2.jpg" style="width:100%">');
        }
    </script>
    <script type="text/javascript" language="javascript">
        function noBack() {
            window.history.forward()
        }
        noBack();
        window.onload = noBack;
        window.onpageshow = function (evt) { if (evt.persisted) noBack(); }
        window.onunload = function () { void (0); }
    </script>
</head>
<body class="is-preload">

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Main -->
        <div id="main">
            <div class="inner">
                <header id="header">
                    <div class="row row-cols-lg-2 row-cols-sm-1">
                        <div class="col-lg-9 col-sm-12">
                            <a asp-action="HomeView" asp-controller="Home" class="logo"> <img src="~/img/Logo Natural Feelings.png" style="width: 4em;"> <strong>Hotel</strong> - Natural Feelings</a>
                        </div>
                        <div class="col-lg-3 col-sm-12">
                            <p class="mt-lg-3 mt-5">Bienvenido @ViewBag.userName</p>
                            <a asp-action="logout" asp-controller="Login"><b class="mt-4 mt-lg-3">Cerrar sesión</b></a>
                        </div>
                    </div>
                </header>
            </div>
            @RenderBody()

        </div>
        <!-- Sidebar -->
        <div id="sidebar">
            <div class="inner">
                <!-- Menu -->
                <nav id="menu">
                    <header class="major">
                        <h2>Menu</h2>
                    </header>
                    <ul>
                        <li><a asp-controller="Home" asp-action="HomeView">Inicio</a></li>
                        <li><a asp-controller="Hotel" asp-action="ModifyPages">Modificar Paginas</a></li>
                        <li><a asp-controller="Hotel" asp-action="ReservationList">Listado de reservaciones</a></li>
                        <li><a asp-controller="Hotel" asp-action="TodayStatus">Ver estado del hotel</a></li>
                        <li><a asp-controller="Admin" asp-action="AdminTemporadas">Administrar Temporadas</a></li>
                        <li><a asp-controller="Admin" asp-action="AdminOfertas">Administrar Ofertas</a></li>
                        <li><a asp-controller="Room" asp-action="Manage">Administrar Habitaciones</a></li>
                        <li><a asp-controller="Hotel" asp-action="AvailabilityRoomView">Consultar disponibilidad</a></li>
                        <li><a asp-controller="Publicity" asp-action="AddAdvertising">Publicidad</a></li>
                    </ul>
                </nav>

                <!-- Footer -->
                <footer id="footer"
                    <p class="copyright">&copy; (2022) Hotel Natural Feelings.</p>
                </footer>

            </div>
        </div>

    </div>

    <!-- Scripts -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/browser.min.js"></script>
    <script src="~/js/breakpoints.min.js"></script>
    <script src="~/js/util.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
